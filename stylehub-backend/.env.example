# Configuración del servidor
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/stylehub
MONGODB_TEST_URI=mongodb://localhost:27017/stylehub_test

# JWT Configuración
JWT_SECRET=tu_super_secreto_jwt_key_aqui_cambiar_en_produccion
JWT_EXPIRE=7d

# Cloudinary (para subida de imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Stripe (procesamiento de pagos)
STRIPE_SECRET_KEY=sk_test_tu_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_tu_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# Email (SendGrid)
EMAIL_FROM=noreply@stylehub.com
SENDGRID_API_KEY=tu_sendgrid_api_key

# Email alternativo (Gmail SMTP)
GMAIL_USER=tu_email@gmail.com
GMAIL_PASSWORD=tu_app_password

# Redis (opcional para cache y sesiones)
REDIS_URL=redis://localhost:6379

# Configuración de archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# URLs externas
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# Configuración de rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log